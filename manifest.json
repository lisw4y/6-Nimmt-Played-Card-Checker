{
	"manifest_version": 2,

	"name": "6 Nimmt Played-Card Checker",
	"description": "This extension allows the user to record the played cards on 6 nimmt.",
	"version": "1.0",

	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [
		"activeTab"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
